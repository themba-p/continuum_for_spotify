{
  "name": "Continuum for Spotify",
  "description": "A mini Spotify player to control playback.",
  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "app.html"
  },
  "permissions": ["identity", "storage"],
  "host_permissions": ["https://*.spotify.com/*", "https://www.google.com/"]
}
